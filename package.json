{
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22.13.0"
  },
  "scripts": {
    "server:dev": "pnpm --filter @aiss-nepch/server dev",
    "server:deploy": "pnpm --filter @aiss-nepch/server run deploy",
    "web:dev": "pnpm --filter @aiss-nepch/web dev",
    "web:build": "pnpm --filter @aiss-nepch/web build",
    "web:deploy": "pnpm --filter @aiss-nepch/web run deploy",
    "mastra:dev": "pnpm --filter @aiss-nepch/server mastra:dev",
    "mastra:build": "pnpm --filter @aiss-nepch/server mastra:build",
    "mastra:start": "pnpm --filter @aiss-nepch/server mastra:start",
    "lint": "biome check . && pnpm --filter @aiss-nepch/web exec tsc --noEmit && pnpm --filter @aiss-nepch/server exec tsc --noEmit",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "db:generate": "pnpm --filter @aiss-nepch/server db:generate",
    "db:migrate": "pnpm --filter @aiss-nepch/server db:migrate",
    "db:migrate:local": "pnpm --filter @aiss-nepch/server db:migrate:local",
    "db:studio": "pnpm --filter @aiss-nepch/server db:studio",
    "db:push": "pnpm --filter @aiss-nepch/server db:push",
    "db:check": "pnpm --filter @aiss-nepch/server db:check"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8"
  }
}
